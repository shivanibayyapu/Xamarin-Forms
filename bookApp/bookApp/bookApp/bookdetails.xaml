<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bookApp.bookdetails">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="ImageLable"/>
            <Label x:Name="Name"/>
            <Label x:Name="Author"/>
            <Label x:Name="Price"/>
            <Label x:Name="Rating"/>
            <Label x:Name="Synopsis"/>
            <Button Text="Buy Now" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>